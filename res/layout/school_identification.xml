<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<LinearLayout
        android:id="@+id/schoolidenti_menu1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        android:orientation="horizontal"
        >

        <ImageButton
		    android:id="@+id/schoolidenti_imageButton_back"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:background="#00000000"
		    android:layout_gravity="center_vertical"
		    android:src="@drawable/back" />
        <TextView
            android:id="@+id/schoolidenti_TextView_create"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center_vertical"           
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="校方认证"
	    	android:textStyle="bold"
	    	android:textColor="#ffffff"
            android:textIsSelectable="true"
            android:textSize="20dp" />   
    </LinearLayout>
 
 <LinearLayout
	    android:id="@+id/schoolidenti_menu2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginRight="10dp"
	    android:layout_marginLeft="10dp"
	   	android:layout_below="@+id/schoolidenti_menu1"
	   	android:layout_marginTop="60dp"
	    android:orientation="horizontal" >

		<EditText
             android:id="@+id/identi_editText_school"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:drawableLeft="@drawable/school"
             android:layout_marginTop="10dp"
             android:drawablePadding="4dp"
             android:ems="10"
             android:hint="学校"
             android:singleLine="true"
             android:windowSoftInputMode="stateHidden" >
            <requestFocus />
        </EditText> 
    </LinearLayout>    

  <LinearLayout
	    android:id="@+id/schoolidenti_menu3"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginRight="10dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="20dp"
	   	android:layout_below="@+id/schoolidenti_menu2"
	    android:orientation="horizontal" >

		<EditText
             android:id="@+id/schoolidenti_editText_number"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:drawableLeft="@drawable/number"
             android:layout_marginTop="10dp"
             android:drawablePadding="4dp"
             android:ems="10"
             android:hint="学号"
             android:singleLine="true"
             android:windowSoftInputMode="stateHidden" >
            <requestFocus />
        </EditText> 
    </LinearLayout>
 

   <LinearLayout
	    android:id="@+id/schoolidenti_menu4"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="10dp"
	   	android:layout_below="@+id/schoolidenti_menu3"
	    android:orientation="horizontal" >

		<EditText
             android:id="@+id/schoolidenti_editText_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:drawableLeft="@drawable/name"
             android:layout_marginTop="10dp"
             android:drawablePadding="4dp"
             android:ems="10"
             android:hint="真实姓名"
             android:singleLine="true"
             android:windowSoftInputMode="stateHidden" >
            <requestFocus />
        </EditText> 
    </LinearLayout>
  
   <LinearLayout 
       android:id="@+id/schoolidenti_menu5"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:orientation="horizontal"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:layout_below="@+id/schoolidenti_menu4">
       <Button 
           android:id="@+id/schoolidenti_button_bound"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/background"
           android:layout_weight="1"
           android:textStyle="bold"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:text="完成"
           />
      
   </LinearLayout>
   
</RelativeLayout>
