<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  
  <LinearLayout
        android:id="@+id/userinfo_menu1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        android:orientation="horizontal"
        >

        <ImageButton
		    android:id="@+id/userinfo_imageButton_back"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:background="#00000000"
		    android:layout_gravity="center_vertical"
		    android:src="@drawable/back" />
        <TextView
            android:id="@+id/userinfo_TextView_create"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center_vertical"           
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="个人信息"
	    	android:textStyle="bold"
	    	android:textColor="#ffffff"
            android:textIsSelectable="true"
            android:textSize="20dp" />   
    </LinearLayout>
    
  
    
        <LinearLayout
        android:id="@+id/userinfo_menu2"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/myself_menu3"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
       
         >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/photo1"
            android:layout_gravity="center_vertical" 
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            />       
        
           <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@drawable/arrow" 
            android:layout_weight="1"
            android:layout_gravity="center_vertical"/>
       
        
    </LinearLayout>

    
    
        <LinearLayout
        android:id="@+id/userinfo_menu3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userinfo_menu2"
        android:background="#ffffff"
        android:layout_marginTop="0.5dp"
         >

        <TextView 
            android:id="@+id/userinfo_textView_namesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="17dp" 
            android:layout_marginLeft="25dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/userinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="190dp"         
            android:layout_marginTop="5dp"
            android:text="大胖子"
            android:textSize="17dp" 
            android:textColor="#808080"/>
        
           <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@drawable/arrow"
            android:layout_gravity="center_vertical"/>
       
        
    </LinearLayout>   
        
        <LinearLayout
        android:id="@+id/userinfo_menu4"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userinfo_menu3"
        android:background="#ffffff"
        android:layout_marginTop="0.5dp"
         >

        <TextView 
            android:id="@+id/userinfo_textView_cutesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="17dp" 
            android:layout_marginLeft="25dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/userinfo_cutename"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="220dp"         
            android:layout_marginTop="5dp"
            android:text="兜兜"
            android:textSize="17dp"
            android:textColor="#808080" />
        
           <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@drawable/arrow"
            android:layout_gravity="center_vertical"/>
       
        
    </LinearLayout>
        
        <LinearLayout
        android:id="@+id/userinfo_menu5"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userinfo_menu4"
        android:background="#ffffff"
        android:layout_marginTop="0.5dp"
         >

        <TextView 
            android:id="@+id/userinfo_textView_emailbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textSize="17dp" 
            android:layout_marginLeft="25dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/userinfo_email"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
                     
            android:layout_marginTop="5dp"
            android:text="123456@qq.com"
            android:layout_marginLeft="120dp"
            android:textSize="17dp" 
            android:textColor="#808080"/>
        
           <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@drawable/arrow"
            android:layout_gravity="center_vertical"
           
            />
       
        
    </LinearLayout>
        
</RelativeLayout>
