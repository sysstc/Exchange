<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ecf0f1">

    <LinearLayout
        android:id="@+id/myself_menu1"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="5dp">

        <ImageView
            
            android:id="@+id/myself_imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
           
            android:src="@drawable/userphoto" 
            />

        <LinearLayout
            android:id="@+id/myself_menu1_2"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myself_textView_name1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="小胖子"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/myself_textView_name2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="123456"
                android:textSize="20dp" />
            
        </LinearLayout>

        <ImageButton
            android:id="@+id/myself_imagebutton_massege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:src="@drawable/massege" />
    </LinearLayout>

    <LinearLayout
	    android:id="@+id/home_menu2"
	    android:layout_width="fill_parent"
	    android:layout_height="55dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentBottom="true"
	    android:background="#ffffff"
	    android:orientation="vertical"
	     >

		<LinearLayout
	    android:id="@+id/home_menu2_1"
	    android:layout_gravity="center_horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:orientation="horizontal" 
	    >

	    <ImageButton
	        android:id="@+id/home_imageButton_home"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/home1" 
	        android:onClick="submit"/>

	    <ImageButton
	        android:id="@+id/home_imageButton_ask"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/ask1"
	        android:onClick="submit" />

	    <ImageButton
	        android:id="@+id/home_imageButton_sale"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/sale1" 
	        android:onClick="submit"/>

	    <ImageButton
	        android:id="@+id/home_imageButton_creat"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/create1" 
	        android:onClick="submit"/>

	    <ImageButton
	        android:id="@+id/home_imageButton_myself"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/myself" 
	        android:onClick="submit"/>
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/home_menu2_2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/home_textview_home"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.52"
	        android:gravity="center"
	        android:text="首页"
	        android:textColor="#000000"
	        android:textSize="10dp" />

	    <TextView
	        android:id="@+id/home_textview_ask"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.74"
	        android:gravity="center"
	        android:text="求"
	        android:textSize="10dp" />

	    <TextView
	        android:id="@+id/home_textview_sale"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.60"
	        android:gravity="center"
	        android:text="卖"
	        android:textSize="10dp" />

	    <TextView
	        android:id="@+id/home_textview_create"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.69"
	        android:gravity="center"
	        android:text="创"
	        android:textSize="10dp" />

	    <TextView
	        android:id="@+id/home_textview_myself"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:gravity="center"
	        android:textColor="#f67480"
	        android:layout_weight="0.3"
	        android:text="个人中心"
	        android:textSize="10dp" />

		</LinearLayout>
	
    </LinearLayout>

    <LinearLayout
        android:id="@+id/myself_menu3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/myself_menu1"
        android:layout_marginTop="30dp"
        android:background="#ffffff" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mypost" 
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"
            android:layout_marginTop="5dp"
            android:text="  我发布的信息"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textSize="20dp" />
        
           <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:src="@drawable/arrow" />
       
        
    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/myself_menu4"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/myself_menu3"
        android:background="#ffffff"
        android:layout_marginTop="0.5dp"
         >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/myfriend"
            android:layout_gravity="center_vertical" 
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_weight="0.4"
            android:layout_marginTop="5dp"
            android:text="  我的联系人"
            android:textSize="20dp" />
        
           <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@drawable/arrow" 
            android:layout_gravity="center_vertical"/>
       
        
    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/myself_menu5"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/myself_menu4"
        android:background="#ffffff"
        android:layout_marginTop="0.5dp"
         >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mycollection"
            android:layout_gravity="center_vertical" 
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_weight="0.4"
            android:layout_marginTop="5dp"
            android:text="  我的收藏"
            android:textSize="20dp" />
        
           <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@drawable/arrow"
            android:layout_gravity="center_vertical"/>
       
        
    </LinearLayout>
    
               <LinearLayout
        android:id="@+id/myself_menu6"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/myself_menu5"
        android:layout_marginTop="30dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/schoolconfirm"
            android:layout_gravity="center_vertical" 
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_weight="0.4"
            android:layout_marginTop="5dp"
            android:text="  校方认证"
            android:textSize="20dp" />
        
           <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@drawable/arrow"
            android:layout_gravity="center_vertical" />
       
        
    </LinearLayout>

               <ImageButton
                   android:id="@+id/imgbutton_exit"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_above="@+id/home_menu2"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:background="@drawable/exit"
                   android:layout_marginBottom="10dp"
                   android:scaleType="fitXY"
                   android:src="@drawable/exit" />
	
</RelativeLayout>