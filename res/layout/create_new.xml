<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:id="@+id/create_menu1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#ffaec9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/create_TextView_create"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="创建信息"
            android:textIsSelectable="true"
            android:textSize="25dp" />
        
        <ImageButton
		    android:id="@+id/create_imageButton_massege"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
		    android:background="#00000000"
		    android:src="@drawable/massege" />
    </LinearLayout>
    
     <LinearLayout
	    android:id="@+id/create_menu2"
	    android:layout_width="fill_parent"
	    android:layout_height="45dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentBottom="true"
	    android:background="#ffffff"
	    android:orientation="vertical"
	     >

		<LinearLayout
	    	android:id="@+id/create_menu2_1"
	    	android:layout_gravity="center_horizontal"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="5dp"
	    	android:layout_alignParentLeft="true"
	    	android:layout_alignParentRight="true"
	    	android:orientation="horizontal" 
	    >

	    <ImageButton
	        android:id="@+id/create_imageButton_home"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/home1" />

	    <ImageButton
	        android:id="@+id/create_imageButton_ask"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/ask1" />

	    <ImageButton
	        android:id="@+id/create_imageButton_sale"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/sale1" />

	    <ImageButton
	        android:id="@+id/create_imageButton_create"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/create" />

	    <ImageButton
	        android:id="@+id/create_imageButton_myself"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/myself1" />
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/create_menu2_2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/create_textView_home"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.52"
	        android:gravity="center"
	        android:text="首页"
	        android:textSize="15px" />

	    <TextView
	        android:id="@+id/create_textView_ask"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.74"
	        android:gravity="center"
	        android:text="求"
	        android:textSize="15px" />

	    <TextView
	        android:id="@+id/create_textView_sale"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.60"
	        android:gravity="center"
	        android:text="卖"
	        android:textSize="15px" />

	    <TextView
	        android:id="@+id/create_textView_create"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.69"
	        android:gravity="center"
	        android:text="创"
	        android:textSize="15px" />

	    <TextView
	        android:id="@+id/create_textView_myself"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:gravity="center"
	        android:layout_weight="0.3"
	        android:text="个人中心"
	        android:textSize="15px" />

		</LinearLayout>
	
    </LinearLayout>

	<ImageView
	    android:layout_width="fill_parent"
	    android:layout_height="0.85dp"
	    android:layout_above="@+id/create_menu2"
	    android:layout_alignParentLeft="true"
	    android:background="#a9b7b7" />

	<RelativeLayout
	    android:id="@+id/create_menu3"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/create_menu1"
	    android:layout_above="@+id/create_menu2"
	    >
	
	<RelativeLayout
	    android:id="@+id/create_menu3_1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	  	android:layout_centerHorizontal="true"
	  	android:layout_centerVertical="true"
	     >
	    <Button
	    	android:id="@+id/create_button_ask"
	    	android:layout_width="200dp"
	    	android:layout_height="50dp"
	    	android:layout_centerHorizontal="true"
	    	android:background="#e0ffaec9"
	    	android:textSize="23dp"
	    	android:text="求助于人" />

		<Button
	    	android:id="@+id/create_button_sale"
	    	android:layout_width="200dp"
	    	android:layout_height="50dp"
	    	android:layout_below="@+id/create_button_ask"
	    	android:layout_marginTop="30dp"
	    	android:layout_centerHorizontal="true"
	    	android:background="#e0ffaec9"
	    	android:textSize="23dp"
	    	android:text="我要出售" />
	    
	   </RelativeLayout>
	    
	    
		
	</RelativeLayout>



</RelativeLayout>
