<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#eee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal" 
        android:layout_height="wrap_content"
       android:layout_marginTop="10dp" >

        <LinearLayout
            android:id="@+id/contacts_massege"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="submit" >
            
			<ImageButton
			    android:id="@+id/contacts_imageButton_massege"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="#00000000"
			    android:src="@drawable/contacts"
			     />
			
            <TextView
                android:id="@+id/contacts_textView_massege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="消息"
                android:textColor="#f67480"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contacts_friend"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center" 
            android:onClick="submit">

            <ImageButton
			    android:id="@+id/contacts_imageButton_friend"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="#00000000"
			    android:src="@drawable/friend1" />
            
            <TextView
                android:id="@+id/contacts_textView_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="好友" 
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

	</LinearLayout>

</LinearLayout>